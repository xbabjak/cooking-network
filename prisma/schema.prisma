generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  username      String?   @unique
  image         String?
  bio           String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  posts    Post[]
  groceries Grocery[]
  recipes  Recipe[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrls String[] @default([])
  type      String   @default("story") // "story" | "recipe"
  recipeId  String?
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  recipe Recipe? @relation(fields: [recipeId], references: [id], onDelete: SetNull)
}

model GroceryItem {
  id          String   @id @default(cuid())
  name        String   @unique
  defaultUnit String   @default("items")
  createdAt   DateTime @default(now())

  aliases          GroceryItemAlias[]
  groceries        Grocery[]
  recipeIngredients RecipeIngredient[]
}

model GroceryItemAlias {
  id            String @id @default(cuid())
  groceryItemId String
  alias         String

  groceryItem GroceryItem @relation(fields: [groceryItemId], references: [id], onDelete: Cascade)

  @@unique([alias])
  @@index([alias])
}

model Grocery {
  id            String   @id @default(cuid())
  userId        String
  groceryItemId String
  unit          String   @default("items")
  quantity      Float    @default(0)
  lowThreshold  Float    @default(0)
  updatedAt     DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  groceryItem GroceryItem @relation(fields: [groceryItemId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Recipe {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  authorId    String?
  createdAt   DateTime @default(now())

  author   User?   @relation(fields: [authorId], references: [id], onDelete: SetNull)
  posts    Post[]
  ingredients RecipeIngredient[]
}

model RecipeIngredient {
  id             String  @id @default(cuid())
  recipeId       String
  groceryItemId  String
  quantity       Float   @default(1)
  unit           String  @default("")

  recipe     Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  groceryItem GroceryItem @relation(fields: [groceryItemId], references: [id], onDelete: Cascade)

  @@index([recipeId])
}
